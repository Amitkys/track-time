<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Amita:wght@400;700&family=Playwrite+AT:ital,wght@0,100..400;1,100..400&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.12.10/dist/full.min.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      html{
        background-color: black !important;
      }
    </style>
</head>
<body style="background-color: black; color: white; font-family: Poppins;" class="h-screen">

  <div class="lg:ml-[540px] ml-[20px] mb-12">
    <h1 class="mb-4 text-[25px] mb-3 text-[#94A3B8]">Choose Date to get insigts</h1>
    <form action="/demo" method="get">
      <input class="input lg:input-md input-sm input-bordered input-warning" type="date" name="date" value="<%= date %>">
      <button class="btn btn-sm btn-warning hover:bg-yellow-700" type="submit">submit</button>
    </form>
  </div>

  <% if (error) { %>
    <div class="alert alert-error">
        <%= errorMsg %>
    </div>
  <% } else { %>

    <% let productiveH = 0, sleepH = 0, unused = 0 %>
    
    <% for(dataS of allData){ %>

        <% for(data of dataS.track){ %>
            
            <% if(data.proHour === true){ %>
                <% productiveH++; %>
            <% } %>

            <% if(data.sleep === true){ %>
                <% sleepH++; %>
            <% } %>


            <% }  %>

            

        <% } %>

    <% unused = 24 - (productiveH + sleepH) %>

    <section class=" body-font">
      <div class="container px-5  mx-auto">
        <div class="flex flex-col text-center w-full mb-20">
          <canvas class="lg:ml-[250px]" id="myChart" style="max-width: 600px;"></canvas>
        </div>
        <div class="flex flex-inline ">
          <div class="p-4 md:w-1/3">
            <div class="flex rounded-lg h-full bg-[#262626] p-2 flex-col">
              <div class="flex items-center mb-3">
                
                <h1>Productive: <%=productiveH %></h1>
              </div>
              
            </div>
          </div>
          <div class="p-4 md:w-1/3">
            <div class="flex rounded-lg h-full bg-[#262626] p-2  flex-col">
              <div class="flex items-center mb-3">
                
                <h1>Sleep: <%=sleepH %></h1>
              </div>
              
            </div>
          </div>
          <div class="p-4 md:w-1/3">
            <div class="flex rounded-lg h-full bg-[#262626] p-2 flex-col">
              <div class="flex items-center mb-3 bg-[#262626]">
               
                <h1>unused: <%=unused %></h1>
              </div>
              
            </div>
          </div>
        </div>
      </div>
    </section>
    <a class="ml-4" href="/">Home</a>
    

<script>
    var xValues = ["Productive", "Sleep", "Unused"];
    var yValues = [<%= productiveH %>, <%= sleepH %>, <%= unused %>];
    var barColors = ["green", "yellow","red"];

    new Chart("myChart", {
    type: "bar",
    data: {
        labels: xValues,
        datasets: [{
          label: "hour",
        backgroundColor: barColors,
        data: yValues
        }]
    },
    options: {
    legend: {display: false},
    scales: {
      yAxes: [{
        ticks: {
          beginAtZero: true,
          fontColor: "white" // Color of the y-axis labels
        },
        gridLines: {
          color: "gray" // Color of the y-axis grid lines
        }
      }],
      xAxes: [{
        ticks: {
          fontColor: "white" // Color of the x-axis labels
        },
        gridLines: {
          color: "gray" // Color of the x-axis grid lines
        }
      }]
    }
  }
});
</script>
  <% } %>
</body>
</html>
